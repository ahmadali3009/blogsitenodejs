<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>blog</title>
</head>

<body>
    <%- include('./partials/nav') %>
        <div class="container mt-4">


            <h1>
                <%=blogs.Title %>
            </h1>
            <img src="<%=blogs.coverImageUrl %>" width="700px" />
            <pre class="mt-3 container" style="display: flex;
            text-wrap: wrap;"> <%= blogs.body %> </pre>
            <div class="container mt-3">
                <img src="<%= blogs.createdBy.profileImageUrl %>" width="70px">
                <%= blogs.createdBy.fullName %>
            </div>

        </div>
        <div class="container mt-3">
            <% if (locals.user) { %>

                <form action="/blog/comment/<%= blogs._id %>" method="post">
       
                    <div class="mb-3">
                      <label  class="form-label"><strong>COMMENT</strong></label><%= `(${comments.length})` %>
                      <input type="text" class="form-control" id="text" name="content" aria-describedby="text">
                    
                    </div>
                 
                    <button type="submit" class="btn btn-primary">ADD</button>
                  </form>
            <% } %>
           
        </div>
        <div class="container mt-3">
            <% comments.forEach(comment => { %>
                <img src="<%= comment.createdBy.profileImageUrl %>" width="70px">
                <%= comment.createdBy.fullName %>
                <pre><%= comment.content %></pre>
            <% }) %>
        </div>
        <%- include('./partials/script') %>
</body>

</html>